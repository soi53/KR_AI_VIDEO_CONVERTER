# OpenAI API 키 (필수)
OPENAI_API_KEY=your_openai_api_key_here

# API 모델 설정
OPENAI_MODEL=gpt-4o

# 언어 설정 (ISO 코드)
SUPPORTED_LANGUAGES=en,ja,zh,de,id
DEFAULT_SOURCE_LANGUAGE=ko

# 파일 저장 설정
MAX_UPLOAD_SIZE_MB=500
ALLOWED_VIDEO_FORMATS=mp4,avi

# OpenAI Whisper 설정
WHISPER_MODEL_SIZE=large
WHISPER_BEAM_SIZE=5

# TTS 모델 설정
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_SPEAKERS_FILE=/app/config/tts_speakers.json

# 디버그 모드 (개발 환경에서만 true로 설정)
DEBUG=false

# 파일 저장 경로 (Docker 컨테이너 내부 경로)
UPLOAD_DIR=/data/uploads
PROCESSED_DIR=/data/processed
RESULTS_DIR=/data/results 